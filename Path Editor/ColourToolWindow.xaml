<Window x:Class="NobleTech.Products.PathEditor.ColourToolWindow"
        x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NobleTech.Products.PathEditor"
        xmlns:converters="clr-namespace:NobleTech.Products.PathEditor.Converters"
        xmlns:viewmodels="clr-namespace:NobleTech.Products.PathEditor.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance viewmodels:ColourToolWindowViewModel}"
        Title="Color"
        Width="270" Height="250"
        WindowStyle="ToolWindow" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True">
    <Window.Resources>
        <converters:ColorToColourConverter x:Key="ColorToColourConverter" />
        <converters:ColorToColourPropertyConverter x:Key="ColorToValueConverter" PropertyName="Value" />
    </Window.Resources>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <local:ColourWheelControl SelectedColour="{Binding Editor.CurrentStrokeColor, Mode=TwoWay, Converter={StaticResource ColorToColourConverter}}" />
        <Slider Grid.Column="1"
                Orientation="Vertical"
                Minimum="0" Maximum="1" LargeChange="0.1" SmallChange="0.01"
                Value="{Binding Editor.CurrentStrokeColor, Mode=TwoWay, Converter={StaticResource ColorToValueConverter}}"
                Margin="20,20,0,20"
                VerticalAlignment="Stretch"/>
    </Grid>
</Window>
