<UserControl x:Class="NobleTech.Products.PathEditor.EasyPressButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NobleTech.Products.PathEditor"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="250"
             SizeChanged="OnSizeChanged"
             MouseDown="OnMouseDown" MouseUp="OnMouseUp"
             MouseEnter="OnMouseEnter" MouseLeave="OnMouseLeave"
             TouchDown="OnTouchDown" TouchUp="OnTouchUp"
             TouchLeave="OnTouchLeave"
             Background="Transparent">
    <Ellipse Name="Ellipse" Fill="{Binding Fill}" StrokeThickness="2" Stroke="{Binding Stroke}"
             Width="{Binding Size}" Height="{Binding Size}" HorizontalAlignment="Center" VerticalAlignment="Center" />
</UserControl>
