<Window x:Class="NobleTech.Products.PathEditor.AnimationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NobleTech.Products.PathEditor"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance local:DrawnPaths}"
        Title="Path Animation" Height="450" Width="800">
    <Grid>
        <Border Margin="5" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Viewbox>
                <Canvas x:Name="Canvas" Width="{Binding CanvasSize.Width}" Height="{Binding CanvasSize.Height}"
                        Background="White" />
            </Viewbox>
        </Border>
        <Button Click="Restart_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20,10" Padding="10">Restart</Button>
    </Grid>
</Window>
